<!DOCTYPE html>
<html>
	<head>
		<title>Chitter</title>
	</head>
	<body>
		<% if flash[:errors] && !flash[:errors].empty? %>
			Please refer to the following errors below:
			<div id="flash">
				<ul id="error" >
					<% flash[:errors].each do |error| %>
					<li><%= error %></li>
					<% end %>
				</div>
			</ul>
		<% end %>
		<% if current_user %>
			<h1>Welcome, <%= current_user.name %></h1> 
		<% end %>
		<%= yield %>
	</body>
</html>