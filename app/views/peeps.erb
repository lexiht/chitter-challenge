<% if current_user %>
	<div class="container" style="margin-top:40px">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
	  		<form class="form-inline" role="form" action="/peeps" method="post">
		  		<div class="form-group">
			        <input class="form-control" type="text" name="message" placeholder="Write something..."> 
			    </div>
				<button type="submit" class="btn btn-primary" value='Submit'>Submit</button>
			</form>
		</div>
	</div>
<% end %>

<div class="container" style="margin-top:40px">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<div class="panel panel-default">
				<div class="panel-body">
					<div style="text-align: center;" id="peeps">
						<% @peeps.each do |peep| %>
							<div>
								<div>
									@<%= peep.user.username %>
									- <%= peep.created_at.strftime("%H:%M  %d-%b-%Y")%>
								</div>
								<div style="color: #428bca;" class="lead">
									"<%= peep.message %>"
								</div>
								<% peep.comments.each do |comment| %>
									<div>
									<%= comment.message %>
								<!-- 	- <%= current_user.username %>	 -->
									</div>
								<% end %>
							</div>
							<% if current_user %>
					            <form action='/comments' method='post'>
					              <input type='hidden' name='peep_id' value='<%= peep.id %>'>
					              <input style='width: 220px' type='text' name='message' placeholder='Comment on this peep...' maxlength="50" required>
					              <input type='submit' value='Comment'>
					            </form>
				        	<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>