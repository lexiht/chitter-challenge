<h1>Peeps</h1>

<% if current_user %>
	<form action="/peeps" method="post">
		<input type="text" name="message" placeholder="Write something..."><br>

		<input type="submit" value="Submit">
	</form>
<% end %>

<ul id="peeps">
	<% @peeps.each do |peep| %>
		<li>
			<div>Message: <%= peep.message %></div>
			<div>Posted at: <%= peep.created_at %></div>
		</li>
	<% end %>
</ul>